{
    "compilerOptions": {
        "outDir": "./built",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "target": "es5",
        "lib": ["es2015", "dom"],
        "skipLibCheck": true,
        "types": ["node"],
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "*": ["src/@types/*"]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": ["node_modules", "src/@types"],
    "typedocOptions": {
        "module": "commonjs",
        "mode": "file",
        "out": "docs/",
        "target": "es5"
    }
}
